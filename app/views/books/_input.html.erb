<div class="wrapper book_input">
  <div class="header">
    <%= link_to 'Bookリストに戻る', root_path %>
  </div>

  <hr>

  <h2>Book登録</h2>

  <%= form_for @book do |f| %>
      <!-- エラーメッセージ -->
      <% if @book.errors.any? %>
        <div class="alert alert-danger">
          <% @book.errors.full_messages.each do |message| %>
            <p class="alert"><%= message %></p>
          <% end %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :title %><br/>
        <%= f.text_field :title, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :author %><br/>
        <%= f.text_field :author, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :publisher %><br/>
        <%= f.text_field :publisher, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :price %><br/>
        <%= f.number_field :price, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :publish_date %><br/>
        <%= f.date_field :publish_date, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :caption %><br/>
        <%= f.text_area :caption, class: 'form-control', rows: 3 %>
      </div>

      <div class="form-group">
        <%= f.label :image %><br/>
        <%= f.file_field :image %>
        <%= f.hidden_field :image_cache %>
      </div>

      <div class="form-group">
        <%= f.label :category %><br/>
        <%= f.select :category, {
          "文学・評論" => "文学・評論", 
          "人文・思想" => "人文・思想", 
          "社会・政治･法律" => "社会・政治･法律", 
          "ノンフィクション" => "ノンフィクション",
          "歴史・地理" => "歴史・地理",
          "ビジネス・経済" => "ビジネス・経済",
          "投資・金融・会社経営" => "投資・金融・会社経営",
          "科学・テクノロジー" => "科学・テクノロジー",
          "医学・薬学・看護学・歯科学" => "医学・薬学・看護学・歯科学",
          "コンピュータ・IT" => "コンピュータ・IT",
          "アート・建築・デザイン" => "アート・建築・デザイン",
          "趣味・実用" => "趣味・実用",
          "スポーツ・アウトドア" => "スポーツ・アウトドア",
          "資格・検定・就職" => "資格・検定・就職",
          "暮らし・健康・子育て" => "暮らし・健康・子育て",
          "旅行ガイド・マップ" => "旅行ガイド・マップ",
          "語学・辞事典・年鑑" => "語学・辞事典・年鑑",
          "英語学習" => "英語学習",
          "教育・学参・受験" => "教育・学参・受験",
          "絵本・児童書" => "絵本・児童書",
          "コミック・ラノベ・BL" => "コミック・ラノベ・BL",
          "ライトノベル" => "ライトノベル",
          "タレント写真集" => "タレント写真集",
          "ゲーム攻略本" => "ゲーム攻略本",
          "エンターテイメント" => "エンターテイメント",
          "新書・文庫・ノベルス" => "新書・文庫・ノベルス",
          "雑誌" => "雑誌",
          "楽譜・スコア・音楽書" => "楽譜・スコア・音楽書",
          "カレンダー・手帳" => "カレンダー・手帳",
          "ポスター" => "ポスター",
          "古本" => "古本",
          "古書･希少本" => "古書･希少本",
          "アダルト" => "アダルト"
        }, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "登録", class: 'btn btn-primary' %>
      </div>
  <% end %>
</div>